@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Style="background-color: #263238" >
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        LojaApp
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" />
    </MudAppBar>
    <MudDrawer @bind-Open="@aberto" Style="background-color: #455A64; color: #fff;  margin-top: -20px ">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Style="margin-top: 20px">
     <MudContainer MaxWidth="MaxWidth.Large">
        @Body
      </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool aberto = true;

    private void DrawerToggle()
    {
        aberto = !aberto;
    }
}
